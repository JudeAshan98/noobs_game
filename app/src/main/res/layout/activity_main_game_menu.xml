<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    tools:context=".MainGameMenu">

    <Button
        android:id="@+id/max_min_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/mybtn"
        android:text="Level 2"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/flag_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.711"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/game1_btn" />

    <Button
        android:id="@+id/bonus_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/mybtn"
        android:text="Bonus Level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.711"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/game_4_btn" />

    <Button
        android:id="@+id/game_4_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/mybtn"
        android:text="Observation"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/bonus_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.711"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flag_btn" />

    <Button
        android:id="@+id/game1_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/mybtn"
        android:text="Swap Level"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/max_min_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.711"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/flag_btn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/mybtn"
        android:textSize="25sp"
        android:text="Flag Level"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/game_4_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.711"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/max_min_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>